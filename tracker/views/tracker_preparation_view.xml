<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="main_tree_view" model="ir.ui.view">
            <field name="name">main.tree.view</field>
            <field name="model">main.view</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="state" widget="badge"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="total_time"/>
                </tree>
            </field>
        </record>

        <record id="main_form_view" model="ir.ui.view">
            <field name="name">client.main.form.view</field>
            <field name="model">main.view</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" invisible="1"/>
                    </header>
                    <sheet>
                        <div>
                            <span style="float:right">
                                <field name="revision_id" placeholder="STATUS"
                                       options="{'no_open': True,'no_create': True,'color_field': 'color'}"/>
                            </span>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Client Name" attrs="{'readonly':[('id','!=', False)]}"/>
                            </h1>
                        </div>
                        <div>
                            <group attrs="{'invisible':[('state', '!=', 'draft')]}">
                                <group>
                                    <field name="user_id" invisible="1"/>
                                    <field name="team_id"/>
<!--                                    <field name="supervisor_id" invisible="1"/>-->
                                </group>
                                <group>
                                    <field name="manager_id" invisible="1"/>
                                    <field name="partners_id" invisible="1"/>
                                </group>
                            </group>
                            <group>
                                <field name="label_note_ids" widget="many2many_tags"
                                       attrs="{'readonly':[('state','=', 'filed')]}"
                                       options="{'no_open': True,'no_create': True,'color_field': 'color'}"/>
                            </group>
                            <group>
                                <group>
                                    <field name="date_start" readonly="1"/>
                                </group>
                                <group>
                                    <field name="date_end" attrs="{'invisible': [('state', '!=', 'filed')]}"
                                           readonly="1"/>
                                </group>
                            </group>
                            <div>
                                <group col="3" attrs="{'invisible': ['|','|','|','|','|','|','|','|','|','|',('state', '=', 'draft'),('state', '=', 'preparation'),('state', '=', 'checking'),('state', '=', 'review'),('state', '=', 'initial_approval'),('state', '=', 'proofread')
                                       ,('state', '=', 'final_checking'),('state', '=', 'final_review'),('state', '=', 'final_approval'),('state', '=', 'final_proofread'),('state', '=', 'iar_review')]}">
                                    <!--printer-->
                                    <group>
                                        <field name="label_printer_ids" widget="many2many_checkboxes"
                                               placeholder="select"
                                               attrs="{'readonly': ['|','|','|',('state', '=', 'sorting'),('state', '=', 'qcc'),('state', '=', 'filing'),('state', '=', 'filed')]}"
                                               options="{'no_open': True,'color_field': 'color'}"/>
                                        <field name="other_attachment_printer"
                                               attrs="{'readonly': ['|','|','|',('state', '=', 'sorting'),('state', '=', 'qcc'),('state', '=', 'filing'),('state', '=', 'filed')]}"/>
                                    </group>
                                    <!--sorter-->
                                    <group attrs="{'invisible':[('state', '=', 'printing')]}">
                                        <field name="label_sorter_ids" widget="many2many_checkboxes"
                                               placeholder="select"
                                               attrs="{'readonly': ['|','|','|',('state', '=', 'printing'),('state', '=', 'qcc'),('state', '=', 'filing'),('state', '=', 'filed')]}"
                                               options="{'no_open': True,'color_field': 'color'}"/>
                                        <field name="other_attachment_sorter"
                                               attrs="{'readonly': ['|','|','|',('state', '=', 'printing'),('state', '=', 'qcc'),('state', '=', 'filing'),('state', '=', 'filed')]}"/>
                                    </group>
                                    <!--QCC-->
                                    <group attrs="{'invisible':['|',('state', '=', 'printing'),('state', '=', 'sorting')]}">
                                        <field name="label_qcc_ids" widget="many2many_checkboxes"
                                               placeholder="select"
                                               attrs="{'readonly': ['|','|','|',('state', '=', 'printing'),('state', '=', 'sorting'),('state', '=', 'filing'),('state', '=', 'filed')]}"
                                               options="{'no_open': True,'color_field': 'color'}"/>
                                        <field name="other_attachment_qcc"
                                               attrs="{'readonly': ['|','|','|',('state', '=', 'printing'),('state', '=', 'sorting'),('state', '=', 'filing'),('state', '=', 'filed')]}"/>
                                    </group>
                                </group>
                                <!--BIR-->
                                <group attrs="{'invisible': ['|','|','|','|','|','|','|','|','|','|',('state', '=', 'draft'),('state', '=', 'preparation'),('state', '=', 'checking'),('state', '=', 'review'),('state', '=', 'initial_approval'),('state', '=', 'proofread')
                                       ,('state', '=', 'final_checking'),('state', '=', 'final_review'),('state', '=', 'final_approval'),('state', '=', 'final_proofread'),('state', '=', 'iar_review')]}">
                                    <group attrs="{'invisible':['|','|',('state', '=', 'printing'),('state', '=', 'sorting'),('state', '=', 'qcc')]}">
                                        <field name="label_bir_ids" widget="many2many_checkboxes"
                                               placeholder="select"
                                               attrs="{'readonly': ['|','|','|',('state', '=', 'printing'),('state', '=', 'sorting'),('state', '=', 'qcc'),('state', '=', 'filed')]}"
                                               options="{'no_open': True,'color_field': 'color'}"/>
                                        <field name="other_attachment_bir"
                                               attrs="{'readonly': ['|','|','|',('state', '=', 'printing'),('state', '=', 'sorting'),('state', '=', 'qcc'),('state', '=', 'filed')]}"/>
                                    </group>
                                    <!--SEC-->
                                    <group attrs="{'invisible':['|','|',('state', '=', 'printing'),('state', '=', 'sorting'),('state', '=', 'qcc')]}">
                                        <field name="label_sec_ids" widget="many2many_checkboxes"
                                               placeholder="select"
                                               attrs="{'readonly': ['|','|','|',('state', '=', 'printing'),('state', '=', 'sorting'),('state', '=', 'sorting'),('state', '=', 'filed')]}"
                                               options="{'no_open': True,'color_field': 'color'}"/>
                                        <field name="other_attachment_sec"
                                               attrs="{'readonly': ['|','|','|',('state', '=', 'printing'),('state', '=', 'sorting'),('state', '=', 'sorting'),('state', '=', 'filed')]}"/>
                                    </group>
                                </group>
                            </div>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="main_view_action" model="ir.actions.act_window">
            <field name="name">New Client</field>
            <field name="res_model">main.view</field>
            <field name="view_mode">tree,form</field>
            <field name="target">new</field>
            <field name="domain">[('state','=','draft')]</field>
            <field name="view_id" ref="main_form_view"/>
        </record>
    </data>
</odoo>
