<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="associate_group" model="res.groups">
        <field name="name">Associates</field>
    </record>

    <record id="supervisor_group" model="res.groups">
        <field name="name">Supervisor</field>
    </record>

    <record id="manager_group" model="res.groups">
        <field name="name">Manager</field>
    </record>

    <record id="joc_group_supervisor_access" model="res.groups">
        <field name="name">Joc Supervisor Access</field>
    </record>

    <record id="vcd_group_supervisor_access" model="res.groups">
        <field name="name">Vcd Supervisor Access</field>
    </record>

    <record id="vcd_group_user" model="res.groups">
        <field name="name">VCD User</field>
        <field name="implied_ids" eval="[(4, ref('vcd_group_supervisor_access'))]"/>
    </record>

     <record id="joc_group_user" model="res.groups">
        <field name="name">JOC User</field>
        <field name="implied_ids" eval="[(4, ref('joc_group_supervisor_access'))]"/>
    </record>

    <record id="field_joc_supervisor_only" model="ir.rule">
        <field name="name">JOC Supervisor Only</field>
        <field name="model_id" ref="model_client_profile"/>
        <field name="domain_force">[('supervisor_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('joc_group_supervisor_access'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="field_vcd_supervisor_only" model="ir.rule">
        <field name="name">VCD Supervisor Only</field>
        <field name="model_id" ref="model_client_profile"/>
        <field name="domain_force">[('supervisor_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('vcd_group_supervisor_access'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="cpms_vcd_associate_rule" model="ir.rule">
        <field name="name">See Only Own Documents</field>
        <field name="model_id" ref="model_client_profile"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('vcd_group_user'))]"/>
    </record>

    <record id="cpms_vcd_associate_profile_rule" model="ir.rule">
        <field name="name">See Own Profile</field>
        <field name="model_id" ref="model_associates_profile"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('vcd_group_user'))]"/>
    </record>

    <record id="cpms_vcd_associate_rule" model="ir.rule">
        <field name="name">Own Documents</field>
        <field name="model_id" ref="model_client_profile"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('vcd_group_user'))]"/>
    </record>

    <record id="cpms_vcd_associate_profile_rule" model="ir.rule">
        <field name="name">Own Profile</field>
        <field name="model_id" ref="model_associates_profile"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('vcd_group_user'))]"/>
    </record>

    <record id="cpms_joc_associate_rule" model="ir.rule">
        <field name="name">See Only Own Documents</field>
        <field name="model_id" ref="model_client_profile"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('joc_group_user'))]"/>
    </record>

    <record id="cpms_joc_associate_profile_rule" model="ir.rule">
        <field name="name">See Own Profile</field>
        <field name="model_id" ref="model_associates_profile"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('joc_group_user'))]"/>
    </record>

    <record id="cpms_joc_associate_rule" model="ir.rule">
        <field name="name">Own Documents</field>
        <field name="model_id" ref="model_client_profile"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
