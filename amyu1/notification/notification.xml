<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="workflow_client_profile" model="wkf.workflows">
        <field name="name">Client Profile Workflow</field>
        <field name="osv">client.profile</field>
        <field name="on_create">True</field>
    </record>

    <record id="workflow_client_profile_state" model="wkf.activity">
        <field name="wkf_id" ref="amyu1.workflow_client_profile"/>
        <field name="name">draft</field>
        <field name="kind">function</field>
        <field name="action">draft(({'state':'draft'})</field>
    </record>

    <record id="workflow_client_profile_supervisor" model="wkf.transition">
        <field name="act_from" ref="amyu1.workflow_client_profile_state"/>
        <field name="act_to" ref="amyu1.workflow_client_profile_state"/>
        <field name="signal">submit_to_supervisor</field>
        <field name="message" ref="your_module.notification_template_for_supervisor"/>
    </record>

    <record id="workflow_your_model_manager" model="wkf.transition">
        <field name="act_from" ref="your_module.workflow_your_model_state"/>
        <field name="act_to" ref="your_module.workflow_your_model_state"/>
        <field name="signal">approve_by_manager</field>
        <field name="message" ref="your_module.notification_template_for_manager"/>
    </record>

