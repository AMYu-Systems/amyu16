<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="associate_group" model="res.groups">
        <field name="name">Associates</field>
    </record>

    <record id="supervisor_group" model="res.groups">
        <field name="name">Supervisor</field>
    </record>

    <record id="manager_group" model="res.groups">
        <field name="name">Manager</field>
    </record>

    <record id="vcd_supervisor_group" model="res.groups">
        <field name="name">VCD Supervisor</field>
    </record>

    <record id="joc_supervisor_group" model="res.groups">
        <field name="name">JOC Supervisor</field>
    </record>

    <record id="joc_user_group" model="res.groups">
        <field name="name">JOC Users</field>
        <field name="implied_ids" eval="[(4, ref('amyu1.joc_supervisor_group'))]"/>
    </record>

    <record id="vcd_cluster_group" model="res.groups">
        <field name="name">VCD Users</field>
        <field name="implied_ids" eval="[(4, ref('amyu1.vcd_supervisor_group'))]"/>
    </record>


    <record id="cpms_associate_rule" model="ir.rule">
        <field name="name">See Only Own Documents</field>
        <field name="model_id" ref="model_client_profile"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('amyu1.associate_group'))]"/>
    </record>

    <record id="cpms_associate_profile_rule" model="ir.rule">
        <field name="name">See Own Profile</field>
        <field name="model_id" ref="model_associates_profile"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('amyu1.associate_group'))]"/>
    </record>

    <record id="joc_supervisor_only" model="ir.rule">
        <field name="name">Supervisor JOC</field>
        <field name="model_id" ref="model_client_profile"/>
        <field name="domain_force">[('create_uid','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('amyu1.joc_supervisor_group'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="vcd_supervisor_only" model="ir.rule">
        <field name="name">Supervisor VCD</field>
        <field name="model_id" ref="model_client_profile"/>
        <field name="domain_force">[('create_uid','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('amyu1.vcd_supervisor_group'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>