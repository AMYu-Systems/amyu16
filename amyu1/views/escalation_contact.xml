<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="escalation_contact_list_view" model="ir.ui.view">
            <field name="name">escalation.contact.list.view</field>
            <field name="model">escalation.contact</field>
            <field name="arch" type="xml">
                <tree editable="bottom" create="0" edit="1" delete="0">
                    <field name="level" readonly="1"/>
                    <field name="timeframe" readonly="1"/>
                    <field name="contact_name"/>
                    <field name="contact_number"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record id="escalation_contact_form_view" model="ir.ui.view">
            <field name="name">escalation.contact.form.view</field>
            <field name="model">escalation.contact</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="level"/>
                            <field name="contact_name"/>
                        </group>
                        <group>
                            <field name="contact_number"/>
                            <field name="email"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

