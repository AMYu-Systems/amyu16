<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="associates_profile_kanban_view" model="ir.ui.view">
            <field name="name">associates.profile.kanban.view</field>
            <field name="model">associates.profile</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="id"/>
                    <field name="associates_image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <span t-esc="record.name.raw_value"/>
                            </div>
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Avatar"
                                         t-att-src="kanban_image('associates.profile', 'associates_image', record.id.raw_value)"/>
                                </div>
<!--                                <div class="oe_kanban_details">-->
