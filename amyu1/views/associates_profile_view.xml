<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="associates_profile_kanban_view" model="ir.ui.view">
            <field name="name">associates.profile.kanban.view</field>
            <field name="model">associates.profile</field>
            <field name="arch" type="xml">
                <kanban create="false">
                    <field name="user_id"/>
                    <field name="id"/>
                    <field name="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <field name="image" widget="image" class="oe_avatar" options="{'zoom': True}"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <div class="oe_kanban_title">
                                        <h2>
                                            <field name="user_id"/>
                                        </h2>
                                    </div>
                                    <div class="oe_kanban_description">
                                        <span style="font-weight: bold; color: blue;">
                                            <field name="job_title_id"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="associates_profile_form_view" model="ir.ui.view">
            <field name="name">associates.profile.form.view</field>
            <field name="model">associates.profile</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div>
                            <field name="image" widget="image" class="oe_avatar"/>
                        </div>
                        <group>
                            <group>
                                <field name="user_id"
                                       options="{'no_edit': True, 'no_create': True,'no_open': True}"
                                       attrs="{'readonly': [('id', '!=', False)]}"/>
                                <field name="job_title_id" widget="many2many_tags"
                                       attrs="{'readonly': [('id', '!=', False)]}"/>
                                <field name="supervisor_id"
                                       options="{'no_edit': True, 'no_create': True,'no_open': True}"
                                       attrs="{'readonly': [('id', '!=', False)]}"/>
                            </group>
                            <group>
                                <field name="manager_id"
                                       options="{'no_edit': True, 'no_create': True,'no_open': True}"
                                       attrs="{'readonly': [('id', '!=', False)]}"/>
                                <field name="team_id"
                                       options="{'no_edit': True, 'no_create': True,'no_open': True}"
                                       attrs="{'readonly': [('id', '!=', False)]}"/>
                                <field name="cluster_id"
                                       options="{'no_edit': True,'no_open': True}"
                                       attrs="{'readonly': [('id', '!=', False)]}"/>
                            </group>
                        </group>
                        <field name="client_profile_ids">
                            <tree>
                                <field name="is_company" string="Company/Individual"/>
                                <field name="name"/>
                                <field name="date_of_engagement" string="Date"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="associates_profile_tree_view" model="ir.ui.view">
            <field name="name">associates.profile.tree.view</field>
            <field name="model">associates.profile</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="user_id"/>
                    <field name="job_title_id"/>
                    <field name="supervisor_id"/>
                    <field name="manager_id"/>
                    <field name="cluster_id"/>
                </tree>
            </field>
        </record>

        <record id="associates_profile_search_view" model="ir.ui.view">
            <field name="name">associates.profile.search.view</field>
            <field name="model">associates.profile</field>
            <field name="arch" type="xml">
                <search>
                    <field name="user_id" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="job_title_id"/>
                    <searchpanel>
                        <field name="team_id" enable_counters="1" groups="amyu1.manager_group" string="Manager View"/>
                        <field name="team_id" enable_counters="1" groups="amyu1.cluster_group" string="Partners View"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="maintain_associates_profile_action" model="ir.actions.act_window">
            <field name="name">Associates Profile</field>
            <field name="res_model">associates.profile</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="associates_profile_kanban_view"/>
        </record>
    </data>
</odoo>