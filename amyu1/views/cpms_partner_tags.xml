<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="partner_tags_list_view" model="ir.ui.view">
            <field name="name">partner.tags.list.view</field>
            <field name="model">partner.tags</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="cluster_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="partner_tags_form_view" model="ir.ui.view">
            <field name="name">partner.tags.form.view</field>
            <field name="model">partner.tags</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="cluster_id"/>
                            </group>
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
         <record id="partner_tags_action" model="ir.actions.act_window">
            <field name="name">Partner Tags</field>
            <field name="res_model">partner.tags</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
